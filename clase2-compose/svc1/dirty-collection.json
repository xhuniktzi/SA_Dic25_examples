            }
        },
        {
            "name": "2) Create EXPRESS + fragile",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": "{{baseUrl}}/deliveries",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"originCity\": \"Antigua\",\n  \"destinationCity\": \"Cob√°n\",\n  \"distanceKm\": 120,\n  \"weightKg\": 8,\n  \"serviceType\": \"EXPRESS\",\n  \"fragile\": true\n}"
                }
            }
        },
        {
            "name": "3) Create long distance",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": "{{baseUrl}}/deliveries",
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"originCity\": \"Huehuetenango\",\n  \"destinationCity\": \"Puerto Barrios\",\n  \"distanceKm\": 380,\n  \"weightKg\": 20,\n  \"serviceType\": \"STANDARD\",\n  \"fragile\": true\n}"
                }
            }
        },
        {
            "name": "4) List deliveries",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/deliveries"
            }
        },
        {
            "name": "5) Get delivery by id (use id from create)",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/deliveries/{{deliveryId}}"
            }
        },
        {
            "name": "6) Cancel delivery",
            "request": {
                "method": "PATCH",
                "url": "{{baseUrl}}/deliveries/{{deliveryId}}/cancel"
            }
        },
        {
            "name": "7) Get cancelled delivery",
            "request": {
                "method": "GET",
                "url": "{{baseUrl}}/deliveries/{{deliveryId}}"
            }
        }
    ],
    "variable": [
        {
